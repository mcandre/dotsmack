#!/usr/bin/env ruby

#
# Tweet validator
#

require 'rubygems'
require 'dotsmack'
require 'yaml'

DEFAULT_IGNORES = [
  '.twitchignore',
  '.twitchrc.yml'
]

DEFAULT_CONFIG = {
  'maxchars' => 140
}

#
# Naive Tweet validation
#
def twitch(tweet, config = nil)
  config =
    if config.nil?
      DEFAULT_CONFIG
    else
      YAML.load(config)
    end

  tweet.length < config['maxchars']
end

def main
  dotsmack = Dotsmack::Smacker.new(dotignore = '.twitchignore', dotconfig = '.twitchrc.yml')

  filenames =
    if ARGV == []
      ['-']
    else
      ARGV
    end

  dotsmack.enumerate(filenames, DEFAULT_IGNORES).each do |filename, config|
    stream =
      if filename == '-'
        STDIN
      else
        open(filename)
      end

    tweet = stream.read

    if !twitch(tweet, config)
      puts "#{filename}: #{tweet.length}"
    end
  end
end

if $PROGRAM_NAME == __FILE__
  main
end
